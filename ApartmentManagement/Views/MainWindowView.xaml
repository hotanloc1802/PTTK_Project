            </Grid>
        </Grid>
        <Border Background="#0430AD" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border CornerRadius="20 0 0 20" Background="White" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border Background="#F3F5F7" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Grid Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
