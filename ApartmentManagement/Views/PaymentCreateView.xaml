<Window x:Class="ApartmentManagement.Views.PaymentCreateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApartmentManagement.Views"
        mc:Ignorable="d"
        Title="PaymentCreateView" Height="760" Width="1380" Background="Transparent" ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Montserrat Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Foreground" Value="#374655"/>
        </Style>
        <!-- Simple Modern DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374655"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border x:Name="PART_Root" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Text Display -->
                                <DatePickerTextBox x:Name="PART_TextBox" 
                                           Grid.Column="0"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontSize="{TemplateBinding FontSize}"
                                           VerticalContentAlignment="Center"
                                           Focusable="False"/>

                                <!-- Simple Calendar Button -->
                                <Button x:Name="PART_Button" 
                                Grid.Column="1"
                                Width="30" Height="30"
                                Background="#0430AD"
                                BorderThickness="0"
                                Focusable="False">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6">
                                                <TextBlock Text="📅" 
                                                   FontSize="16"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   Foreground="White"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Calendar Popup - Fixed Position -->
                                <Popup x:Name="PART_Popup" 
                               AllowsTransparency="True" 
                               Placement="Bottom" 
                               PlacementTarget="{Binding ElementName=PART_Root}"
                               StaysOpen="False"
                               PopupAnimation="Slide"
                               HorizontalOffset="0"
                               VerticalOffset="5">
                                    <Border Background="White" 
                                    BorderBrush="#E1E5E9" 
                                    BorderThickness="1" 
                                    CornerRadius="8"
                                    Padding="10">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" 
                                                      Opacity="0.2" BlurRadius="15"/>
                                        </Border.Effect>
                                        <Calendar x:Name="PART_Calendar"
                                          Background="Transparent"
                                          BorderThickness="0"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Root" Property="BorderBrush" Value="#0430AD"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PART_Root" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple Calendar Day Style -->
        <Style x:Key="SimpleDayButtonStyle" TargetType="CalendarDayButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374655"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F4FF"/>
                    <Setter Property="Foreground" Value="#0430AD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0430AD"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsToday" Value="True">
                    <Setter Property="BorderBrush" Value="#0430AD"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,15" HorizontalAlignment="Center" Width="1300" Height="686" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.01*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Border CornerRadius="20 0 0 20" ClipToBounds="True" Background="White" Grid.Row="0"  Grid.RowSpan="3" IsEnabled="False">
            <Border  CornerRadius="20 0 0 20" ClipToBounds="True" Margin="0,0,-5,0">
                <Border.Background>
                    <SolidColorBrush Color="#0430AD"></SolidColorBrush>
                </Border.Background>
            </Border>
        </Border>
        <Grid Grid.Column ="0" Grid.Row ="0">
            <Image  Stretch="Uniform" Width="60" HorizontalAlignment="Center" />
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" Background="#f1f1f1" Margin="10,0,0,0" >
        </Grid>
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="BuildingListBox" Margin="0,20,0,20" BorderThickness="0" Background="Transparent" SelectedIndex="0" ScrollViewer.VerticalScrollBarVisibility="Disabled"   IsEnabled="False"    >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>

                <!-- Item 1 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/mien_dong.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Name="BconsMienDong"  Text="Miền Đông" Tag="mien_dong" FontFamily="Montserrat Bold"
FontSize="13" Foreground="White" VerticalAlignment="Center"
Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
                <!-- Item 2 -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/Plaza.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Name="BconsPlaza" Text="Plaza" Tag="plaza" FontFamily="Montserrat Bold"
       FontSize="13" Foreground="White" VerticalAlignment="Center"
       Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- Item 3 -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/sala.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Text="Sala" Tag="sala" FontFamily="Montserrat Bold"
       FontSize="13" Foreground="White" VerticalAlignment="Center"
       Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- Item 4 -->
                <Grid Grid.Row="3" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/green_view.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Text="Green View" Tag="green_view" FontFamily="Montserrat Bold"
       FontSize="13" Foreground="White" VerticalAlignment="Center"
       Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
            </ListBox>
            <Grid Grid.Row="1">
                <Ellipse Width="50" Height="50" Stroke="White" StrokeThickness="1" StrokeDashArray="10,2" Fill="Transparent" VerticalAlignment="Top"/>
                <iconPacks:PackIconMaterial Kind="Plus" Width="17" Height="17"
           Foreground="#ebedf3" Margin="42,16,0,0"/>
            </Grid>
        </Grid>
        <Border Background="#0430AD" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border CornerRadius="20 0 0 20" Background="White" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border Background="#F3F5F7" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Grid Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Ellipse Width="55" Height="55">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock x:Name="Bcons" Text="Miền Đông" FontFamily="Montserrat Bold" FontSize="13" Foreground="Black" VerticalAlignment="Center" Height="18"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Background="#f1f1f1" Margin="0,0,0,0" >
        </Grid>
        <!-- Navigation Menu -->
        <Grid Grid.Column="1" Grid.Row="2">
            <StackPanel Margin="0,30,0,0">
                <Border CornerRadius="10" Padding="5,5,5,5" Margin="0,0,0,0" Width="142">
                    <Button x:Name="btnDashboard" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnDashBoard_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="HomeVariant" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="dashboardText" Text=" Dashboard" FontFamily="Montserrat Bold" FontSize="13" 
                               Foreground="#959595" VerticalAlignment="Center" Height="18" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnApartment" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnApartment_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Domain" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="apartmentText" Text=" Apartment" FontFamily="Montserrat Bold" FontSize="13" 
                               Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnResident" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnResident_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="AccountGroup" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="residentText" Text=" Resident" FontFamily="Montserrat Bold" FontSize="13" 
                               Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" CornerRadius="10" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnPayement" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Background="#0430AD">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="CreditCardOutline" VerticalAlignment="Center" Foreground="white"/>
                            <TextBlock x:Name="paymentText" Text=" Payment" FontFamily="Montserrat Bold" FontSize="13" 
                               Foreground="white" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnService" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnService_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="ToolboxOutline" VerticalAlignment="Center" Foreground="#959595" Margin="0,0,3,0"/>
                            <TextBlock x:Name="serviceText" Text=" Service" FontFamily="Montserrat Bold" FontSize="13" 
                               Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnSetting2" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Cog" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="settingText" Text=" Setting" FontFamily="Montserrat Bold" FontSize="13" 
                               Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnlogout" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="ExitToApp" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="logoutText" Text=" Log out" FontFamily="Montserrat Bold" FontSize="13" 
                               Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Margin="30,0,0,0">
                <Border x:Name="boSearch" Background="#EEF0F2" CornerRadius="10" Height="45" HorizontalAlignment="Center" Margin="0,16,0,15" Width="597" >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Icon:PackIconMaterial Kind="Magnify" Foreground="#9FA4AD" VerticalAlignment="Center" Margin="7,0,0,0" Width="18" Height="18"/>
                        <TextBox x:Name="boxSearch" Background="Transparent" BorderBrush="Transparent" Foreground="#9FA4AD" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" 
                         Width="571" VerticalAlignment="Center" Padding="5,5" IsEnabled="False"/>
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtSearch" Text="Search..." Foreground="#9FA4AD" FontFamily="Montserrat" Margin="30,0,0,0" IsHitTestVisible="False"  />
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Margin="30,0,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.02*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <iconPacks:PackIconMaterial Kind="CalendarOutline" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="1">
                    <iconPacks:PackIconMaterial Kind="MessageTextOutline" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="2">
                    <iconPacks:PackIconMaterial Kind="BellOutline" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="3" Background="#9FA4AD" Margin="0,23,0,23"  >
                </Grid>
                <Grid Grid.Column="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Ellipse Width="40" Height="40">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resource/Assets/htl.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="User" Text="Tuan cui" FontFamily="Montserrat Bold" FontSize="18" Foreground="Black" VerticalAlignment="Center" Height="18"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1" Background="white" Margin="0,0,10,0">
        </Grid>
        <Grid Grid.Column="2" Grid.Row="2"  Margin="0,0,10,0">
            <Grid>
                <!-- Main Content -->
                <Grid Grid.Row="1" Margin="20,10,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>


                    </Grid>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Border Background="White" CornerRadius="8" Padding="30" BorderThickness="1" BorderBrush="#EEEEEE">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Payment Details Section -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                                    <TextBlock Text="Bill Details" Foreground="#0430AD" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Left Column - Amount -->
                                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,15">
                                            <TextBlock FontSize="13" Margin="0,0,0,8">
                                                <Run Text="Amount" Foreground="#374655"/>
                                                <Run Text="*" Foreground="Red"/>
                                            </TextBlock>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="4,0,0,4" BorderThickness="1" BorderBrush="#DDDDDD">
                                                    <TextBlock Text="$" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                                                </Border>
                                                <TextBox Grid.Column="1" x:Name="TxtAmount" Height="40" Padding="10,0" BorderThickness="0,1,1,1" 
                                                         VerticalContentAlignment="Center" BorderBrush="#DDDDDD"
                                                         Text="{Binding BillAmount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Left Column - Payment Type -->
                                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,15">
                                            <TextBlock Text="Payment Type" Margin="0,0,0,5" Foreground="#374655"/>
                                            <ComboBox x:Name="CmbPaymentType" Style="{StaticResource CustomComboBoxStyle}" Height="40" Padding="10,0" 
                                                      VerticalContentAlignment="Center" Background="Transparent"
                                                      SelectedValue="{Binding BillType, Mode=TwoWay}" SelectedValuePath="Content">
                                                <ComboBoxItem Content="Rent Payment" IsSelected="True"/>
                                                <ComboBoxItem Content="Maintenance Fee"/>
                                                <ComboBoxItem Content="Utility Payment"/>
                                                <ComboBoxItem Content="Water"/>
                                                <ComboBoxItem Content="Electricity"/>
                                                <ComboBoxItem Content="Other"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Right Column - Payment Method -->
                                        <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,15">
                                            <TextBlock Text="Payment Method" Margin="0,0,0,5" Foreground="#374655"/>
                                            <ComboBox x:Name="CmbPaymentMethod" Style="{StaticResource CustomComboBoxStyle}" Height="40" Padding="10,0" 
                                                      VerticalContentAlignment="Center"
                                                      SelectedValue="{Binding PaymentMethod, Mode=TwoWay}" SelectedValuePath="Content">
                                                <ComboBoxItem Content="Cash" IsSelected="True"/>
                                                <ComboBoxItem Content="Credit Card"/>
                                                <ComboBoxItem Content="Bank Transfer"/>
                                                <ComboBoxItem Content="E-Wallet"/>
                                                <ComboBoxItem Content="Other"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Right Column - Status -->
                                        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,0,0,15">
                                            <TextBlock Text="Status" Margin="0,0,0,5" Foreground="#374655"/>
                                            <ComboBox x:Name="CmbStatus" Style="{StaticResource CustomComboBoxStyle}" Height="40" Padding="10,0" 
                                                      VerticalContentAlignment="Center"
                                                      SelectedValue="{Binding PaymentStatus, Mode=TwoWay}" SelectedValuePath="Content">
                                                <ComboBoxItem Content="Pending" IsSelected="True"/>
                                                <ComboBoxItem Content="Paid"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Due Date Section -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,15">
                                            <!-- Simple Label -->
                                            <TextBlock Text="Due Date" 
                                               Margin="0,0,0,8" 
                                               Foreground="#374655"
                                               FontFamily="Segoe UI"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>

                                            <!-- Simple Modern DatePicker -->
                                            <DatePicker x:Name="DpDueDate" 
                                                Style="{StaticResource ModernDatePickerStyle}"
                                                SelectedDate="{Binding DueDate, Mode=TwoWay}"
                                                SelectedDateFormat="Short"
                                                FirstDayOfWeek="Monday">

                                                <!-- Apply Calendar Style -->
                                                <DatePicker.CalendarStyle>
                                                    <Style TargetType="Calendar">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="CalendarDayButtonStyle" Value="{StaticResource SimpleDayButtonStyle}"/>
                                                    </Style>
                                                </DatePicker.CalendarStyle>
                                            </DatePicker>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!-- Resident/Apartment Section -->
                                <StackPanel Grid.Row="1" Margin="0,0,0,25">
                                    <TextBlock Text="Apartment Information" Foreground="#0430AD" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Left Column -->
                                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,15">
                                            <TextBlock Text="Select Apartment" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtApartment" Height="40" Padding="10,0" 
                                                     VerticalContentAlignment="Center" 
                                                     Text="{Binding ApartmentId}"
                                                     BorderThickness="1"
                                                     BorderBrush="#DDDDDD"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!-- Additional Information Section -->
                                <StackPanel Grid.Row="2" Margin="0,0,0,25">
                                    <TextBlock Text="Additional Information" Foreground="#0430AD" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20" />
                                    <StackPanel>
                                        <TextBlock Text="Notes / Description" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtNotes" 
                                                 Height="100" 
                                                 TextWrapping="Wrap" 
                                                 AcceptsReturn="True" 
                                                 Padding="10"
                                                 VerticalScrollBarVisibility="Auto" 
                                                 BorderThickness="1"
                                                 BorderBrush="#DDDDDD"
                                                 VerticalContentAlignment="Top"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Invoice Preview -->
                                <StackPanel Grid.Row="3" Margin="0,0,0,25">
                                    <TextBlock Text="Invoice Preview" Foreground="#0430AD" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <Border BorderThickness="1" BorderBrush="#DDDDDD" Background="#FAFAFA" CornerRadius="8" Padding="20">
                                        <StackPanel>
                                            <!-- Invoice Header -->
                                            <Grid Margin="0,0,0,20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="APARTMENT MANAGEMENT" FontWeight="Bold" FontSize="16"/>
                                                    <TextBlock Text="123 Property Street, City, Country" Foreground="#666666" Margin="0,5,0,0"/>
                                                    <TextBlock Text="contact@apartmentmanagement.com" Foreground="#666666"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                    <TextBlock Text="INVOICE" FontWeight="Bold" FontSize="20" Foreground="#0430AD"/>
                                                    <TextBlock Text="{Binding ElementName=DpPaymentDate, Path=SelectedDate, StringFormat='Date: {0:d}'}" 
                                               Foreground="#666666" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                                                    <TextBlock Text="#INV-00001" Foreground="#666666" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Bill To Section -->
                                            <Grid Margin="0,0,0,20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="BILL TO:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding ElementName=CmbResident, Path=SelectedItem.full_name}" Foreground="#666666"/>
                                                    <TextBlock Text="{Binding ElementName=CmbApartment, Path=SelectedItem.apartment_number, StringFormat='Apartment: {0}'}" 
                                               Foreground="#666666"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Invoice Items -->
                                            <Border BorderThickness="0,0,0,1" BorderBrush="#DDDDDD" Margin="0,0,0,15">
                                                <Grid Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="DESCRIPTION" FontWeight="SemiBold"/>
                                                    <TextBlock Grid.Column="1" Text="AMOUNT" FontWeight="SemiBold" Width="100" TextAlignment="Right"/>
                                                </Grid>
                                            </Border>

                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding ElementName=CmbPaymentType, Path=SelectedItem.Content}" Foreground="#666666"/>
                                                <TextBlock Grid.Column="1" Text="{Binding ElementName=TxtAmount, Path=Text, StringFormat='${0}'}" 
                                           Foreground="#666666" Width="100" TextAlignment="Right"/>
                                            </Grid>

                                            <!-- Invoice Total -->
                                            <Border BorderThickness="0,1,0,0" BorderBrush="#DDDDDD" Margin="0,15,0,0" Padding="0,15,0,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="TOTAL" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding ElementName=TxtAmount, Path=Text, StringFormat='${0}'}" 
                                               FontWeight="Bold" Foreground="#0430AD" Width="100" TextAlignment="Right"/>
                                                </Grid>
                                            </Border>

                                            <!-- Thank You Message -->
                                            <TextBlock Text="Thank you for your business!" HorizontalAlignment="Center" Margin="0,20,0,0" 
                                       Foreground="#666666" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <Grid Grid.Row="4" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="0.2*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Background="#0430AD" Foreground="White" x:Name="BtnCancel" Content="Cancel" Margin="10,380,10,0" Click="BtnCancel_Click"/>

                                    <Button Grid.Column="2" Background="#0430AD" Foreground="White" Content="Save" Margin="10,380,10,0" Click="BtnSave_Click" Command="{Binding AddBillCommand}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>