                        <Button x:Name="btnCompleted" Content="Completed" Foreground="#434343" FontFamily="Montserrat Bold"/>
                    </Border>
                    <Border x:Name="borderOverdue" CornerRadius="10" Margin="10,0,0,0" Background="#F0F0F0" BorderThickness="0" Width="auto">
                        <Button x:Name="btnOverdue" Content="Overdue" Foreground="#434343" FontFamily="Montserrat Bold"/>
                    </Border>
                </StackPanel>

                <!-- Title and filter tabs -->
                <TextBlock Text="Payments"  Foreground="#434343"  FontFamily="Montserrat Bold" Grid.Row="0" FontSize="20"  Margin="0,15,187,10"/>

                <!-- Separator -->
                <Separator Grid.Row="3" Margin="0,15"/>

                <!-- Count and sort section -->
                <Grid Grid.Row="4" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding PaymentCount, StringFormat={}{0} Residents}"  FontSize="16"  VerticalAlignment="Center"  Foreground="#434343"  />

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="sortComboBox" Style="{StaticResource CustomComboBoxStyle}" Width="180" SelectedIndex="0" SelectionChanged="SortComboBox_SelectionChanged">
                            <ComboBoxItem Content="Apartment Number"/>
                            <ComboBoxItem Content="ID"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Data Grid -->
                <DataGrid x:Name="PaymentDataGrid" 
                          Grid.Row="5" Grid.Column="1" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          GridLinesVisibility="None" 
                          BorderThickness="1" 
                          BorderBrush="#E1E1E1"
                          Background="White" 
                          RowBackground="White" 
                          AlternatingRowBackground="#F8F9FA"
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False" 
                          ItemsSource="{Binding Payments}"
                          HeadersVisibility="Column"
                          SelectionChanged="PaymentDataGrid_SelectionChanged">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F8F9FA"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E1E1E1"/>
                            <Setter Property="FontFamily" Value="Montserrat"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Apartment Number" Binding="{Binding apartment_id}" Width="250"/>
                        <DataGridTextColumn Header="Total Amount" Binding="{Binding total_amount}" Width="300"/>
                        <DataGridTextColumn Header="Payment Status" Binding="{Binding payment_status}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="EditActionButton" Background="#4CAF50" Foreground="White" Margin="0,0,5,0" Padding="8,3" BorderThickness="0">
                                            <Icon:PackIconMaterial Kind="PencilOutline" Width="12" Height="12" />
                                        </Button>
                                        <Button x:Name="DeleteActionButton" Background="#F44336" Foreground="White" Padding="8,3"
                                           BorderThickness="0" Click="DeleteButton_Click">
                                            <Icon:PackIconMaterial Kind="DeleteOutline" Width="12" Height="12"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Pagination -->
                <Border Grid.Row="6" HorizontalAlignment="Right" BorderBrush="#E1E1E1" BorderThickness="1" Margin="0,15,0,15" Padding="5" Background="White" CornerRadius="15">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnPrevPage" Content="&lt;" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat"/>
                        <Button x:Name="btnPage1" Content="1" Padding="8,3" Margin="3" Background="#0430AD" Foreground="White" BorderThickness="0" FontFamily="Montserrat"/>
                        <Button x:Name="btnPage2" Content="2" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat"/>
                        <Button x:Name="btnPage3" Content="3" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat"/>
                        <Button x:Name="btnNextPage" Content="&gt;" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>