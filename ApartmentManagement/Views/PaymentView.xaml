<Window x:Class="ApartmentManagement.Views.PaymentView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:ApartmentManagement.Views"
        mc:Ignorable="d"
        Title="Payment" Height="760" Width="1380" Background="Transparent" ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Montserrat Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,15" HorizontalAlignment="Center" Width="1300" Height="686" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.01*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <!-- Left Navigation Panel Background -->
        <Border CornerRadius="20 0 0 20" ClipToBounds="True" Background="White" Grid.Row="0" Grid.RowSpan="3" IsEnabled="False">
            <Border CornerRadius="20 0 0 20" ClipToBounds="True" Margin="0,0,-5,0">
                <Border.Background>
                    <SolidColorBrush Color="#0430AD"></SolidColorBrush>
                </Border.Background>
            </Border>
        </Border>

        <!-- Logo Section -->
        <Grid Grid.Column="0" Grid.Row="0">
            <Image Stretch="Uniform" Width="60" HorizontalAlignment="Center" />
        </Grid>

        <!-- Separator -->
        <Grid Grid.Column="0" Grid.Row="1" Background="#f1f1f1" Margin="10,0,0,0" />

        <!-- Building Selection Panel -->
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="BuildingListBox" Margin="0,20,0,20" BorderThickness="0" Background="Transparent" 
                     SelectedIndex="0" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionChanged="OnBuildingSelectionChanged">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>

                <!-- Building Items -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Name="BconsMienDong" Text="Miền Đông" Tag="mien_dong" FontFamily="Montserrat Bold"
                                   FontSize="13" Foreground="White" VerticalAlignment="Center"
                                   Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Name="BconsPlaza" Text="Plaza" Tag="plaza" FontFamily="Montserrat Bold"
                                   FontSize="13" Foreground="White" VerticalAlignment="Center"
                                   Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Text="Sala" Tag="sala" FontFamily="Montserrat Bold"
                                   FontSize="13" Foreground="White" VerticalAlignment="Center"
                                   Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>

                <Grid Grid.Row="3" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Text="Green View" Tag="green_view" FontFamily="Montserrat Bold"
                                   FontSize="13" Foreground="White" VerticalAlignment="Center"
                                   Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
            </ListBox>

            <Grid Grid.Row="1">
                <Ellipse Width="50" Height="50" Stroke="White" StrokeThickness="1" StrokeDashArray="10,2" Fill="Transparent" VerticalAlignment="Top"/>
                <iconPacks:PackIconMaterial Kind="Plus" Width="17" Height="17"
                                            Foreground="#ebedf3" Margin="42,16,0,0"/>
            </Grid>
        </Grid>

        <!-- Main Content Background -->
        <Border Background="#0430AD" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border CornerRadius="20 0 0 20" Background="White" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border Background="#F5F9FA" Grid.Column="2" Grid.RowSpan="3" Height="686" VerticalAlignment="Top"/>

        <!-- Current Building Display -->
        <Grid Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Ellipse Width="55" Height="55">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock x:Name="Bcons" Text="Miền Đông" FontFamily="Montserrat Bold" FontSize="13" 
                           Foreground="Black" VerticalAlignment="Center" Height="18"/>
            </Grid>
        </Grid>

        <!-- Separator -->
        <Grid Grid.Column="1" Grid.Row="1" Background="#f1f1f1" Margin="0,0,0,0" />

        <!-- Navigation Menu -->
        <Grid Grid.Column="1" Grid.Row="2">
            <StackPanel Margin="0,30,0,0">
                <Border CornerRadius="10" Padding="5,5,5,5" Margin="0,0,0,0" Width="142">
                    <Button x:Name="btnDashboard" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnMainWindow_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="HomeVariant" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="dashboardText" Text=" Dashboard" FontFamily="Montserrat Bold" FontSize="13" 
                                       Foreground="#959595" VerticalAlignment="Center" Height="18" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnApartment" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnApartment_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Domain" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="apartmentText" Text=" Apartment" FontFamily="Montserrat Bold" FontSize="13" 
                                       Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnResident" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnResident_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="AccountGroup" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="residentText" Text=" Resident" FontFamily="Montserrat Bold" FontSize="13" 
                                       Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" CornerRadius="10" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnPayement" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Background="#0430AD">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="CreditCardOutline" VerticalAlignment="Center" Foreground="white"/>
                            <TextBlock x:Name="paymentText" Text=" Payment" FontFamily="Montserrat Bold" FontSize="13" 
                                       Foreground="white" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnService" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="ToolboxOutline" VerticalAlignment="Center" Foreground="#959595" Margin="0,0,3,0"/>
                            <TextBlock x:Name="serviceText" Text=" Service" FontFamily="Montserrat Bold" FontSize="13" 
                                       Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnSetting2" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Cog" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="settingText" Text=" Setting" FontFamily="Montserrat Bold" FontSize="13" 
                                       Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Background="Transparent" Padding="5,5,5,5" Width="142">
                    <Button x:Name="btnlogout" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="ExitToApp" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="logoutText" Text=" Log out" FontFamily="Montserrat Bold" FontSize="13" 
                                       Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Top Bar with Search and User Icon -->
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Margin="30,0,0,0">
                <Border x:Name="boSearch" Background="#EEF0F2" CornerRadius="10" Height="45" HorizontalAlignment="Center" Margin="0,16,0,15" Width="597" >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" KeyDown="BoxSearch_KeyDown">
                        <Icon:PackIconMaterial Kind="Magnify" Foreground="#9FA4AD" VerticalAlignment="Center" Margin="7,0,0,0" Width="18" Height="18"/>
                        <TextBox x:Name="boxSearch" Background="Transparent" BorderBrush="Transparent" Foreground="#9FA4AD" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" 
                         Width="571" VerticalAlignment="Center" Padding="5,5" TextChanged="BoxSearch_TextChanged" />
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtSearch" Text="Search..." Foreground="#9FA4AD" FontFamily="Montserrat" Margin="30,0,0,0" IsHitTestVisible="False"  />
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" Margin="30,0,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.02*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <iconPacks:PackIconMaterial Kind="CalendarOutline" Width="24" Height="24" HorizontalAlignment="Left" 
                                                VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="1">
                    <iconPacks:PackIconMaterial Kind="MessageTextOutline" Width="24" Height="24" HorizontalAlignment="Left" 
                                                VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="2">
                    <iconPacks:PackIconMaterial Kind="BellOutline" Width="24" Height="24" HorizontalAlignment="Left" 
                                                VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="3" Background="#9FA4AD" Margin="0,23,0,23"/>
                <Grid Grid.Column="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Ellipse Width="40" Height="40">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="User" Text="Tuan cui" FontFamily="Montserrat Bold" FontSize="18" 
                                   Foreground="Black" VerticalAlignment="Center" Height="18"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="2" Grid.Row="1" Background="white" Margin="0,0,10,0"/>

        <Grid Grid.Column="2" Grid.Row="2" Margin="30,0,0,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title and New Payment Button -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Payment Management" FontFamily="Montserrat Bold" 
                           FontSize="24" Foreground="#0430AD" VerticalAlignment="Bottom" Margin="0,0,0,10"/>

                <Button Grid.Column="1" x:Name="btnNewPayment" Width="150" Height="40" Content="New Payment"
                        Background="#0430AD" Foreground="White" BorderThickness="0"
                        FontFamily="Montserrat Bold" FontSize="14"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,10"/>
            </Grid>

            <!-- Filter Buttons -->
            <Grid Grid.Row="1" Margin="0,10,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="borderAll" Grid.Column="0" Background="#0430AD" CornerRadius="8" Margin="0,0,10,0">
                    <Button x:Name="btnAll" Content="All" Width="auto" Height="30" Background="Transparent"
                            Foreground="White" BorderThickness="0" FontFamily="Montserrat Bold" FontSize="12"
                            Click="BtnAll_Click"/>
                </Border>

                <Border x:Name="borderPending" Grid.Column="1" Background="#F0F0F0" CornerRadius="8" Margin="0,0,10,0">
                    <Button x:Name="btnPending" Content="Pending" Width="auto" Height="30" Background="Transparent"
                            Foreground="#434343" BorderThickness="0" FontFamily="Montserrat Bold" FontSize="12"
                            Click="BtnPending_Click"/>
                </Border>

                <Border x:Name="borderCompleted" Grid.Column="2" Background="#F0F0F0" CornerRadius="8" Margin="0,0,10,0">
                    <Button x:Name="btnCompleted" Content="Completed" Width="auto" Height="30" Background="Transparent"
                            Foreground="#434343" BorderThickness="0" FontFamily="Montserrat Bold" FontSize="12"
                            Click="BtnCompleted_Click"/>
                </Border>

                <Border x:Name="borderOverdue" Grid.Column="3" Background="#F0F0F0" CornerRadius="8" Margin="0,0,10,0">
                    <Button x:Name="btnOverdue" Content="Overdue" Width="auto" Height="30" Background="Transparent"
                            Foreground="#434343" BorderThickness="0" FontFamily="Montserrat Bold" FontSize="12"/>
                </Border>

                <ComboBox x:Name="sortComboBox" Grid.Column="5" Height="30" FontFamily="Montserrat" FontSize="12"
                          Background="White" BorderBrush="#E0E0E0" SelectionChanged="SortComboBox_SelectionChanged"
                          Style="{StaticResource CustomComboBoxStyle}">
                    <ComboBoxItem Content="Apartment Number"/>
                    <ComboBoxItem Content="ID"/>
                </ComboBox>
            </Grid>
            
            <!-- Separator -->
            <Separator Grid.Row="2" Margin="0,15"/>
            
            <!-- Data Grid -->
            <DataGrid Grid.Row="3" x:Name="PaymentDataGrid" Margin="0,10,30,0"
                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                      CanUserDeleteRows="False" SelectionMode="Single" CanUserResizeColumns="True"
                      GridLinesVisibility="None" HeadersVisibility="Column" RowHeight="50"
                      Background="White" AlternatingRowBackground="#F9F9F9"
                      BorderThickness="0" ItemsSource="{Binding Payments}"
                      SelectionChanged="PaymentDataGrid_SelectionChanged">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E1E1E1"/>
                        <Setter Property="FontFamily" Value="Montserrat"/>
                        <Setter Property="FontSize" Value="13"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding payment_id}" Width="70"/>
                    <DataGridTextColumn Header="Apartment Number" Binding="{Binding bill.apartment.apartment_number}" Width="150"/>
                    <DataGridTextColumn Header="Bill Type" Binding="{Binding bill.bill_type}" Width="150"/>
                    <DataGridTextColumn Header="Due Date" Binding="{Binding bill.due_date}" Width="200"/>
                    <DataGridTextColumn Header="Amount Due" Binding="{Binding bill.bill_amount}" Width="150"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding payment_status}" Width="*"/>
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="EditActionButton" Background="#4CAF50" Foreground="White" Margin="0,0,5,0" Padding="8,3" BorderThickness="0">
                                        <Icon:PackIconMaterial Kind="PencilOutline" Width="12" Height="12" />
                                    </Button>
                                    <Button x:Name="DeleteActionButton" Background="#F44336" Foreground="White" Padding="8,3"
                                           BorderThickness="0" Click="DeleteButton_Click">
                                        <Icon:PackIconMaterial Kind="DeleteOutline" Width="12" Height="12"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Pagination and Summary Info -->
            <Grid Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="50" Margin="0,0,30,0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnPrevPage" Content="&lt;" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat" Click="BtnPrevPage_Click"/>
                    <Button x:Name="btnPage1" Content="1" Padding="8,3" Margin="3" Background="#0430AD" Foreground="White" BorderThickness="0" FontFamily="Montserrat" Click="BtnGoToPage_Click"/>
                    <Button x:Name="btnPage2" Content="2" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat" Click="BtnGoToPage_Click"/>
                    <Button x:Name="btnPage3" Content="3" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat" Click="BtnGoToPage_Click"/>
                    <Button x:Name="btnNextPage" Content="&gt;" Padding="8,3" Margin="3" Background="Transparent" BorderThickness="0" FontFamily="Montserrat" Click="BtnNextPage_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>