                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Cog"  VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="settingText"  Text=" Setting" FontFamily="Montserrat Bold" FontSize="13" Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Background="Transparent" Padding="5,5,5,5"  Width="142">
                    <Button x:Name="btnlogout"  Style="{StaticResource menuButton}"  Width="138" Margin="-5,5,0,5">
