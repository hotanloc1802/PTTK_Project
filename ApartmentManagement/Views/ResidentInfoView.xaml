                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/img1.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
