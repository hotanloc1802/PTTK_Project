        <Border CornerRadius="20 0 0 20" ClipToBounds="True" Background="White" Grid.Row="0"  Grid.RowSpan="3" IsEnabled="False">
            <Border  CornerRadius="20 0 0 20" ClipToBounds="True" Margin="0,0,-5,0">
                <Border.Background>
