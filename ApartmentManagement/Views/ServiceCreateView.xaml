<Window x:Class="ApartmentManagement.Views.ServiceCreateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApartmentManagement.Views"
        mc:Ignorable="d"
        Title="ServiceCreate" Height="760" Width="1380" Background="Transparent" ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Montserrat Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,15" HorizontalAlignment="Center" Width="1300" Height="686" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.01*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Border CornerRadius="20 0 0 20" ClipToBounds="True" Background="White" Grid.Row="0"  Grid.RowSpan="3" IsEnabled="False">
            <Border  CornerRadius="20 0 0 20" ClipToBounds="True" Margin="0,0,-5,0">
                <Border.Background>
                    <SolidColorBrush Color="#0430AD"></SolidColorBrush>
                </Border.Background>
            </Border>
        </Border>
        <Grid Grid.Column ="0" Grid.Row ="0">
            <Image  Stretch="Uniform" Width="60" HorizontalAlignment="Center" />
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" Background="#f1f1f1" Margin="10,0,0,0" >
        </Grid>
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="BuildingListBox"  Margin="0,20,0,20" BorderThickness="0" Background="Transparent" SelectedIndex="0"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>

                <!-- Item 1 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/mien_dong.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Name="BconsMienDong"  Text="Miền Đông" Tag="mien_dong" FontFamily="Montserrat Bold"
FontSize="13" Foreground="White" VerticalAlignment="Center"
Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
                <!-- Item 2 -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/plaza.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Name="BconsPlaza" Text="Plaza" Tag="plaza" FontFamily="Montserrat Bold"
FontSize="13" Foreground="White" VerticalAlignment="Center"
Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- Item 3 -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/Sala.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Text="Sala" Tag="sala" FontFamily="Montserrat Bold"
FontSize="13" Foreground="White" VerticalAlignment="Center"
Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- Item 4 -->
                <Grid Grid.Row="3" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <Ellipse Width="80" Height="80">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resource/Assets/green_view.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Grid Grid.Row="2" Background="#f1f1f1" Margin="10,0,10,0" Height="1" />
                    <Grid Grid.Row="1">
                        <TextBlock Text="Green View" Tag="green_view" FontFamily="Montserrat Bold"
FontSize="13" Foreground="White" VerticalAlignment="Center"
Height="18" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
            </ListBox>
            <Grid Grid.Row="1">
                <Ellipse Width="50" Height="50" Stroke="White" StrokeThickness="1" StrokeDashArray="10,2" Fill="Transparent" VerticalAlignment="Top"/>
                <iconPacks:PackIconMaterial Kind="Plus" Width="17" Height="17"
    Foreground="#ebedf3" Margin="42,16,0,0"/>
            </Grid>
        </Grid>

        <Border Background="#0430AD" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border CornerRadius="20 0 0 20" Background="White" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Border Background="#F5F9FA" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Grid Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Ellipse Width="55" Height="55">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Resource/Assets/mien_dong.jpg"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock x:Name="Bcons" Text="Miền Đông" FontFamily="Montserrat Bold" FontSize="13" Foreground="Black" VerticalAlignment="Center" Height="18"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Background="#f1f1f1" Margin="0,0,0,0" >
        </Grid>
        <Grid Grid.Column="1" Grid.Row="2">
            <StackPanel Margin="0,30,0,0" >
                <Border CornerRadius="10" Padding="5,5,5,5" Margin="0,0,0,0" Width="142"  >
                    <Button x:Name="btnDashboard"  Style="{StaticResource menuButton}"  Width="138" Margin="-5,5,0,5" Click="BtnMainWindow_Click">
                        <Button.Triggers>
                            <!-- Trigger khi di chuột vào Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Đổi màu nền của Button khi di chuột vào -->
                                        <ColorAnimation
    Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
    To="#CDDFFB" Duration="0:0:0.2" />
                                        <!-- Đổi màu Foreground của TextBlock khi di chuột vào -->
                                        <ColorAnimation
Storyboard.TargetName="dashboardText"
Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
To="Black" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <!-- Trigger khi di chuột ra khỏi Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Trở lại màu nền gốc của Button khi di chuột ra -->
                                        <ColorAnimation
Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
To="Transparent" Duration="0:0:0.2" />
                                        <!-- Trở lại màu Foreground gốc của TextBlock khi di chuột ra -->
                                        <ColorAnimation
Storyboard.TargetName="dashboardText"
Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
To="#959595" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="HomeVariant" VerticalAlignment="Center" Foreground="#959595"/>
                            <!-- Gán tên cho TextBlock để có thể sử dụng trong Storyboard -->
                            <TextBlock x:Name="dashboardText" Text=" Dashboard" FontFamily="Montserrat Bold" FontSize="13" Foreground="#959595" VerticalAlignment="Center" Height="18" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Background="Transparent" Padding="5,5,5,5"  Width="142"  >
                    <Button x:Name="btnApartment" Style="{StaticResource menuButton}" Width="138" Margin="-5,5,0,5" Click="BtnApartment_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Domain" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock  x:Name="apartmentText" Text=" Apartment" FontFamily="Montserrat Bold" FontSize="13" Foreground="#959595"
 VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Background="Transparent" CornerRadius="10" Padding="5,5,5,5"  Width="142" >
                    <Button x:Name="btnResident" Style="{StaticResource menuButton}"  Width="138" Margin="-5,5,0,5" Click="BtnResident_Click">
                        <Button.Triggers>
                            <!-- Trigger khi di chuột vào Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Đổi màu nền của Button khi di chuột vào -->
                                        <ColorAnimation
Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
To="#CDDFFB" Duration="0:0:0.2" />
                                        <!-- Đổi màu Foreground của TextBlock khi di chuột vào -->
                                        <ColorAnimation
Storyboard.TargetName="serviceText"
Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
To="Black" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <!-- Trigger khi di chuột ra khỏi Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Trở lại màu nền gốc của Button khi di chuột ra -->
                                        <ColorAnimation
 Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
To="Transparent" Duration="0:0:0.2" />
                                        <!-- Trở lại màu Foreground gốc của TextBlock khi di chuột ra -->
                                        <ColorAnimation
Storyboard.TargetName="serviceText"
Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
To="#959595" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="AccountGroup" VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock  x:Name="residentText"  Text="Resident" FontFamily="Montserrat Bold" FontSize="13" Foreground="#959595"
 VerticalAlignment="Center" Margin="3,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Background="Transparent" Padding="5,5,5,5"  Width="142">
                    <Button x:Name="btnPayment"  Style="{StaticResource menuButton}"  Width="138" Margin="-5,5,0,5" Click="BtnPayment_Click">
                        <Button.Triggers>
                            <!-- Trigger khi di chuột vào Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Đổi màu nền của Button khi di chuột vào -->
                                        <ColorAnimation
            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
            To="#CDDFFB" Duration="0:0:0.2" />
                                        <!-- Đổi màu Foreground của TextBlock khi di chuột vào -->
                                        <ColorAnimation
            Storyboard.TargetName="paymentText"
            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
            To="Black" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <!-- Trigger khi di chuột ra khỏi Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Trở lại màu nền gốc của Button khi di chuột ra -->
                                        <ColorAnimation
             Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
            To="Transparent" Duration="0:0:0.2" />
                                        <!-- Trở lại màu Foreground gốc của TextBlock khi di chuột ra -->
                                        <ColorAnimation
            Storyboard.TargetName="paymentText"
            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
            To="#959595" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="CreditCardOutline"  VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="paymentText"  Text=" Payment" FontFamily="Montserrat Bold" FontSize="13" Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Background="Transparent" Padding="5,5,5,5"  Width="142">
                    <Button x:Name="btnService"  Style="{StaticResource menuButton}"  Width="138" Margin="-5,5,0,5" Background="#0430AD">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="ToolboxOutline"  VerticalAlignment="Center" Foreground="White" Margin="0,0,3,0"/>
                            <TextBlock x:Name="serviceText"  Text="Service" FontFamily="Montserrat Bold" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Background="Transparent" Padding="5,5,5,5"  Width="142">
                    <Button x:Name="btnSetting2"  Style="{StaticResource menuButton}"  Width="138" Margin="-5,5,0,5">
                        <Button.Triggers>
                            <!-- Trigger khi di chuột vào Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Đổi màu nền của Button khi di chuột vào -->
                                        <ColorAnimation
Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
To="#CDDFFB" Duration="0:0:0.2" />
                                        <!-- Đổi màu Foreground của TextBlock khi di chuột vào -->
                                        <ColorAnimation
Storyboard.TargetName="settingText"
Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
To="Black" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <!-- Trigger khi di chuột ra khỏi Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Trở lại màu nền gốc của Button khi di chuột ra -->
                                        <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)" To="Transparent" Duration="0:0:0.2" />
                                        <!-- Trở lại màu Foreground gốc của TextBlock khi di chuột ra -->
                                        <ColorAnimation Storyboard.TargetName="settingText" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="#959595" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Cog"  VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="settingText"  Text=" Setting" FontFamily="Montserrat Bold" FontSize="13" Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Background="Transparent" Padding="5,5,5,5"  Width="142">
                    <Button x:Name="btnlogout"  Style="{StaticResource menuButton}"  Width="138" Margin="-5,5,0,5">
                        <Button.Triggers>
                            <!-- Trigger khi di chuột vào Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Đổi màu nền của Button khi di chuột vào -->
                                        <ColorAnimation
Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
To="#CDDFFB" Duration="0:0:0.2" />
                                        <!-- Đổi màu Foreground của TextBlock khi di chuột vào -->
                                        <ColorAnimation
Storyboard.TargetName="settingText"
Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
To="Black" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <!-- Trigger khi di chuột ra khỏi Button -->
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Trở lại màu nền gốc của Button khi di chuột ra -->
                                        <ColorAnimation
 Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
To="Transparent" Duration="0:0:0.2" />
                                        <!-- Trở lại màu Foreground gốc của TextBlock khi di chuột ra -->
                                        <ColorAnimation
Storyboard.TargetName="settingText"
Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
To="#959595" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="ExitToApp"  VerticalAlignment="Center" Foreground="#959595"/>
                            <TextBlock x:Name="logout"  Text=" Log out" FontFamily="Montserrat Bold" FontSize="13" Foreground="#959595" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Margin="30,0,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.02*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <iconPacks:PackIconMaterial Kind="CalendarOutline" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="1">
                    <iconPacks:PackIconMaterial Kind="MessageTextOutline" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="2">
                    <iconPacks:PackIconMaterial Kind="BellOutline" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#0430AD"/>
                </Grid>
                <Grid Grid.Column="3" Background="#9FA4AD" Margin="0,23,0,23"  >
                </Grid>
                <Grid Grid.Column="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Ellipse Width="40" Height="40">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resource/Assets/htl.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="User" Text="Tuan cui"  FontFamily="Montserrat Bold" FontSize="18" Foreground="Black" VerticalAlignment="Center" Height="18"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1" Background="white" Margin="0,0,10,0">
        </Grid>
        <Grid Grid.Column="2" Grid.Row="2" Margin="30,0,0,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="4.5*"/>
            </Grid.RowDefinitions>
            <!--Fill Form-->
            <Border CornerRadius="5" Background="#ffffff">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!--App Title-->
                    <TextBlock Text="Add Service" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="55 0 0 2" FontSize="16" FontWeight="SemiBold" Foreground="#0430AD"/>
                    <Icon:PackIconMaterial Kind="Domain" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="33 0 0 4" Width="14" Height="14" Foreground="#FF9D00"/>
                    <Icon:PackIconMaterial Kind="Domain" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30 4 0 0" Width="14" Height="14" Foreground="#0430AD"/>

                    <!--Top Menu-->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0 0 15 0">
                        <Button Style="{StaticResource menuButton}">
                            <Icon:PackIconMaterial Kind="Close" Width="14" Height="14"/>
                        </Button>
                    </StackPanel>

                    <!--Right Section-->
                    <Border Grid.Row="1" Grid.Column="1" Background="#0430AD" CornerRadius="0 0 5 0" Margin="0,0,0,-550">
                        <StackPanel Margin="40 0 40 0">

                            <!--Main Image-->
                            <Border CornerRadius="100" Width="85" Height="85" Background="#ffffff" Margin="15 40 20 20">
                                <Ellipse Width="80" Height="80">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Resource/Assets/img1.jpg" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>

                            <!--Section Description-->
                            <TextBlock Foreground="#ffffff" FontWeight="SemiBold" TextAlignment="Center" FontSize="20" Text="Service Details"/>
                            <TextBlock TextWrapping="Wrap" Foreground="#E6E8EC" FontSize="13" Margin="20 15 20 20" LineHeight="24" FontWeight="Light" TextAlignment="Center" Text="Please provide the details for the services. All fields marked with an asterisk (*) are required."/>

                            <!--Guidelines-->
                            <Border Background="White" CornerRadius="10" Padding="20" Margin="0 15 0 0" Height="275">
                                <StackPanel>
                                    <TextBlock Text="Guidelines" Foreground="Black" FontWeight="SemiBold" FontSize="16" Margin="0 0 0 10"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="12" LineHeight="20" Margin="0 0 0 5" Text="• Apartment Number must be unique within a building"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="12" LineHeight="20" Margin="0 0 0 5" Text="• Phone should be the Owner's Phone"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="12" LineHeight="20" Margin="0 0 0 5" Text="• Category must be chosen"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="12" LineHeight="20" Margin="0 0 0 5" Text="• Description is neccessary to recognize residents requirements"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </Border>

                    <!--Left Section-->
                    <Border Grid.Row="1" Background="#F2F5F8" CornerRadius="0 0 0 5" Margin="0,0,0,-550">
                        <Grid VerticalAlignment="Center" Margin="70 0 -60 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="101*"/>
                                <RowDefinition Height="451*"/>
                            </Grid.RowDefinitions>
                            <!--Background Layers-->

                            <!--Main Layer-->
                            <Border CornerRadius="7" Background="#ffffff" Grid.RowSpan="2" Margin="0,0,40,0" Height="536" VerticalAlignment="Top" >
                                <Border.Effect>
                                    <DropShadowEffect Direction="-130" BlurRadius="30" ShadowDepth="5" Opacity="0.1"/>
                                </Border.Effect>

                                <Grid Margin="20 0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--Form Title-->
                                    <StackPanel Orientation="Horizontal" Margin="20 20 0 0">
                                        <Border CornerRadius="50" BorderThickness="1.5" BorderBrush="#EFEFEF">
                                            <Icon:PackIconMaterial Kind="HomeCity" Width="25" Height="25" Foreground="#0430AD" Margin="7"/>
                                        </Border>

                                        <TextBlock Text="New Service" Foreground="#374655" FontSize="18" Margin="15 0 0 0" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Separator Grid.Row="1" Grid.ColumnSpan="2" Height="0.7" Margin="-20 20 -20 20" Background="#E1E6EB"/>

                                    <!--Inputs-->
                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="20,0,15,0">
                                        <TextBlock Foreground="#374655" FontSize="13" Margin="0 0 0 8">
                                        <Run Text="Apartment Number "/>
                                        <Run Text="*" Foreground="Red"/>
                                        </TextBlock>
                                        <TextBox x:Name="ApartmentNumber" Height="40" Padding="10 0" VerticalContentAlignment="Center" 
                                         BorderThickness="1" BorderBrush="#E1E6EB"
                                         Text="{Binding ApartmentId, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock x:Name="ErrorMessage" HorizontalAlignment="Left" Foreground="Red" FontSize="12" Text="{Binding ErrorMessage}" FontFamily="Montserrat Bold" VerticalAlignment="Center" Margin="0,5,0,0" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="15 0 20 10">
                                        <TextBlock  Foreground="#374655" FontSize="13" Margin="0 0 0 8">
                                        <Run Text="Phone"/>
                                        <Run Text="*" Foreground="Red"/>
                                        </TextBlock>
                                        <TextBox x:Name="Phone" Height="40" Padding="10 0" VerticalContentAlignment="Center"
                                          BorderThickness="1" BorderBrush="#E1E6EB"
                                          Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="3" Margin="20 10 15 10">
                                        <TextBlock Foreground="#374655" FontSize="13" Margin="0 0 0 8">
        <Run Text="Category"/>
        <Run Text="*" Foreground="Red"/>
                                        </TextBlock>
                                        <ComboBox x:Name="CategoryComboBox" 
          Grid.Column="1" 
          Width="auto" 
          Style="{StaticResource CustomComboBoxStyle}" 
          BorderBrush="#E1E6EB" 
          Height="40" 
          SelectedIndex="0" 
          VerticalContentAlignment="Center" 
          Padding="10 0"
          SelectedValue="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
          SelectedValuePath="Content">
                                            <ComboBoxItem Content="Cleaning"/>
                                            <ComboBoxItem Content="Security"/>
                                            <ComboBoxItem Content="Maintenance"/>
                                            <ComboBoxItem Content="Electrical"/>
                                            <ComboBoxItem Content="Plumbing"/>
                                            <ComboBoxItem Content="Other"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="3" Margin="20 10 15 10">
                                        <TextBlock  Foreground="#374655" FontSize="13" Margin="0 0 0 8">
                                        <Run Text="Price of Service"/>
                                        <Run Text="*" Foreground="Red"/>
                                        </TextBlock>
                                        <TextBox x:Name="Amount" Height="40" Padding="10 0" VerticalContentAlignment="Center"
                                          BorderThickness="1" BorderBrush="#E1E6EB"
                                          Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="4" Margin="15 0 -250 -10">
                                        <TextBlock Text="Description" Foreground="#374655" FontSize="13" Margin="0 0 0 8"/>

                                        <TextBox x:Name="Description"  Height="84" Padding="10 0" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#E1E6EB" 
                                                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="490"/>
                                        <TextBlock x:Name="ErrorMessage2a" HorizontalAlignment="Left" Foreground="Red" FontSize="12" Text="{Binding ErrorMessage1}" FontFamily="Montserrat Bold" VerticalAlignment="Center" Margin="0,5,0,0" />
                                    </StackPanel>

                                    <!--Main Button-->
                                    <Border  Grid.Column="1" Grid.Row="6" >
                                        <Button x:Name="btnSave" Content="Add Service" HorizontalAlignment="Right" Margin="0 20 20 0"  Background="#0430AD" Foreground="White" Width="180" Height="40" 
                                                FontWeight="SemiBold" Command="{Binding AddServiceRequestCommand}">
                                            <Button.Effect>
                                                <DropShadowEffect Direction="-120" BlurRadius="10" Opacity="0.3" ShadowDepth="5" Color="#0430AD"/>
                                            </Button.Effect>
                                        </Button>
                                    </Border>

                                    <!--Secondary Button-->
                                    <Button x:Name="btnCancel" Grid.Row="6" Content="Cancel" HorizontalAlignment="Left" Margin="20 20 0 0" 
                                   Background="Transparent" Foreground="#979797" Width="150" Height="40" BorderThickness="1" BorderBrush="#CCCCCC">

                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>